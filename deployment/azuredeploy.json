{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "azfperf",
      "metadata": {
        "description": "Prefix for Function App names; runtime suffixes are appended."
      }
    },
    "hostingPlanNameWindows": {
      "type": "string",
      "defaultValue": "[format('{0}-plan-win', parameters('namePrefix'))]",
      "metadata": {
        "description": "Windows Consumption plan for Node, Python, and PowerShell."
      }
    },
    "hostingPlanNamePythonFlex": {
      "type": "string",
      "defaultValue": "[format('{0}-plan-flex', parameters('namePrefix'))]",
      "metadata": {
        "description": "Linux Flex Consumption plan for the Python function app."
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "[toLower(take(format('st{0}', uniqueString(resourceGroup().id)), 24))]",
      "metadata": {
        "description": "Storage account name (max 24 chars)."
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage account SKU."
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "defaultValue": "logs-azfperf-lab-test",
      "metadata": {
        "description": "Log Analytics workspace name for Application Insights."
      }
    },
    "subscriptionId": {
      "type": "string",
      "defaultValue": "[subscription().subscriptionId]",
      "metadata": {
        "description": "Subscription ID for the Log Analytics Workspace."
      }
    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "metadata": {
        "description": "Resource group of the Log Analytics Workspace."
      }
    },
    "hostFunctionKeyName": {
      "type": "string",
      "defaultValue": "defaultkey",
      "metadata": {
        "description": "Host function key name used for all function apps."
      }
    },
    "hostFunctionKeyValue": {
      "type": "securestring",
      "metadata": {
        "description": "Host function key value used for all function apps."
      }
    },
    "packageUriNode": {
      "type": "secureString",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/node.zip",
      "metadata": {
        "description": "Zip package URI for the Node.js function app."
      }
    },
    "packageUriPython": {
      "type": "secureString",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/python.zip",
      "metadata": {
        "description": "Zip package URI for the Python function app."
      }
    },
    "packageUriPowerShell": {
      "type": "secureString",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/powershell.zip",
      "metadata": {
        "description": "Zip package URI for the PowerShell function app."
      }
    }
  },
  "variables": {
    "location": "[parameters('location')]",
    "workspaceResourceId": "[format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.OperationalInsights/workspaces/{2}', parameters('subscriptionId'), parameters('resourceGroupName'), parameters('logAnalyticsWorkspaceName'))]",
    "pythonDeployContainerName": "[take(format('{0}-python-deploy', toLower(parameters('namePrefix'))), 63)]",
    "windowsRuntimes": [
      {
        "suffix": "node",
        "worker": "node",
        "packageUri": "[parameters('packageUriNode')]"
      },
      {
        "suffix": "powershell",
        "worker": "powershell",
        "packageUri": "[parameters('packageUriPowerShell')]"
      }
    ],
    "zipDeployRuntimes": [
      {
        "suffix": "powershell",
        "packageUri": "[parameters('packageUriPowerShell')]"
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-05-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2",
      "properties": {
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('hostingPlanNameWindows')]",
      "location": "[variables('location')]",
      "sku": {
        "tier": "Dynamic",
        "name": "Y1"
      },
      "properties": {
        "computeMode": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-12-01",
      "name": "[parameters('hostingPlanNamePythonFlex')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "FC1",
        "tier": "FlexConsumption"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/default/{1}', parameters('storageAccountName'), variables('pythonDeployContainerName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[format('{0}-{1}-ai', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix)]",
      "location": "[variables('location')]",
      "tags": {
        "[format('hidden-link:{0}', resourceId('Microsoft.Web/sites', toLower(format('{0}-{1}', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix))))]": "Resource"
      },
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[variables('workspaceResourceId')]"
      },
      "copy": {
        "name": "windowsInsights",
        "count": "[length(variables('windowsRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[format('{0}-python-ai', parameters('namePrefix'))]",
      "location": "[variables('location')]",
      "tags": {
        "[format('hidden-link:{0}', resourceId('Microsoft.Web/sites', toLower(format('{0}-python', parameters('namePrefix')))))]": "Resource"
      },
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[variables('workspaceResourceId')]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[toLower(format('{0}-{1}', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix))]",
      "location": "[variables('location')]",
      "kind": "functionapp",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', format('{0}-{1}-ai', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix))]",
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanNameWindows'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanNameWindows'))]",
        "httpsOnly": true,
        "siteConfig": {
          "cors": {
            "allowedOrigins": [
              "https://portal.azure.com"
            ]
          },
          "appSettings": "[concat(createArray(createObject('name', 'AzureWebJobsStorage', 'value', format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', parameters('storageAccountName'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2021-09-01').keys[0].value)), createObject('name', 'WEBSITE_CONTENTAZUREFILECONNECTIONSTRING', 'value', format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', parameters('storageAccountName'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2021-09-01').keys[0].value)), createObject('name', 'WEBSITE_CONTENTSHARE', 'value', take(format('{0}-{1}-content', toLower(parameters('namePrefix')), variables('windowsRuntimes')[copyIndex()].suffix), 63)), createObject('name', 'APPINSIGHTS_INSTRUMENTATIONKEY', 'value', reference(resourceId('Microsoft.Insights/components', format('{0}-{1}-ai', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix)), '2020-02-02').InstrumentationKey), createObject('name', 'FUNCTIONS_EXTENSION_VERSION', 'value', '~4'), createObject('name', 'FUNCTIONS_WORKER_RUNTIME', 'value', variables('windowsRuntimes')[copyIndex()].worker)), if(equals(variables('windowsRuntimes')[copyIndex()].suffix, 'node'), createArray(createObject('name', 'WEBSITE_NODE_DEFAULT_VERSION', 'value', '~20')), createArray()), if(and(equals(variables('windowsRuntimes')[copyIndex()].suffix, 'node'), not(empty(parameters('packageUriNode')))), createArray(createObject('name', 'WEBSITE_RUN_FROM_PACKAGE', 'value', parameters('packageUriNode')), createObject('name', 'SCM_DO_BUILD_DURING_DEPLOYMENT', 'value', 'false')), createArray()))]"
        }
      },
      "copy": {
        "name": "windowsApps",
        "count": "[length(variables('windowsRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-12-01",
      "name": "[toLower(format('{0}-python', parameters('namePrefix')))]",
      "location": "[variables('location')]",
      "kind": "functionapp,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', format('{0}-python-ai', parameters('namePrefix')))]",
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanNamePythonFlex'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountName'), 'default', variables('pythonDeployContainerName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanNamePythonFlex'))]",
        "httpsOnly": true,
        "functionAppConfig": {
          "runtime": {
            "name": "python",
            "version": "3.11"
          },
          "scaleAndConcurrency": {
            "instanceMemoryMB": 2048,
            "maximumInstanceCount": 40
          },
          "deployment": {
            "storage": {
              "type": "blobContainer",
              "value": "[concat('https://', parameters('storageAccountName'), '.blob.', environment().suffixes.storage, '/', variables('pythonDeployContainerName'))]",
              "authentication": {
                "type": "StorageAccountConnectionString",
                "storageAccountConnectionStringName": "AzureWebJobsStorage"
              }
            }
          }
        },
        "siteConfig": {
          "cors": {
            "allowedOrigins": [
              "https://portal.azure.com"
            ]
          },
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', parameters('storageAccountName'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2021-09-01').keys[0].value)]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', format('{0}-python-ai', parameters('namePrefix'))), '2020-02-02').InstrumentationKey]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "[parameters('packageUriPython')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/extensions",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', toLower(format('{0}-{1}', parameters('namePrefix'), variables('zipDeployRuntimes')[copyIndex()].suffix)), 'zipdeploy')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', toLower(format('{0}-{1}', parameters('namePrefix'), variables('zipDeployRuntimes')[copyIndex()].suffix)))]"
      ],
      "properties": {
        "packageUri": "[variables('zipDeployRuntimes')[copyIndex()].packageUri]",
        "appOffline": true
      },
      "copy": {
        "name": "zipDeploy",
        "count": "[length(variables('zipDeployRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Web/sites/host/functionKeys",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/default/{1}', toLower(format('{0}-{1}', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix)), parameters('hostFunctionKeyName'))]",
      "properties": {
        "name": "[parameters('hostFunctionKeyName')]",
        "value": "[parameters('hostFunctionKeyValue')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', toLower(format('{0}-{1}', parameters('namePrefix'), variables('windowsRuntimes')[copyIndex()].suffix)))]"
      ],
      "copy": {
        "name": "windowsKeys",
        "count": "[length(variables('windowsRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Web/sites/host/functionKeys",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}/default/{1}', toLower(format('{0}-python', parameters('namePrefix'))), parameters('hostFunctionKeyName'))]",
      "properties": {
        "name": "[parameters('hostFunctionKeyName')]",
        "value": "[parameters('hostFunctionKeyValue')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', toLower(format('{0}-python', parameters('namePrefix'))))]"
      ]
    }
  ],
  "outputs": {
    "functionAppNames": {
      "type": "array",
      "value": "[createArray(toLower(format('{0}-node', parameters('namePrefix'))), toLower(format('{0}-python', parameters('namePrefix'))), toLower(format('{0}-powershell', parameters('namePrefix'))))]"
    },
    "appInsightsNames": {
      "type": "array",
      "value": "[createArray(format('{0}-node-ai', parameters('namePrefix')), format('{0}-python-ai', parameters('namePrefix')), format('{0}-powershell-ai', parameters('namePrefix')))]"
    }
  }
}
