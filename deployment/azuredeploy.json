{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "azfperf",
      "metadata": {
        "description": "Prefix for Function App names; runtime suffixes are appended."
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "[toLower(take(format('st{0}', uniqueString(resourceGroup().id)), 24))]",
      "metadata": {
        "description": "Storage account name (max 24 chars)."
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage account SKU."
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "defaultValue": "logs-azfperf-lab-test",
      "metadata": {
        "description": "Log Analytics workspace name for Application Insights."
      }
    },
    "subscriptionId": {
      "type": "string",
      "defaultValue": "[subscription().subscriptionId]",
      "metadata": {
        "description": "Subscription ID for the Log Analytics Workspace."
      }
    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "metadata": {
        "description": "Resource group of the Log Analytics Workspace."
      }
    },
    "hostFunctionKeyName": {
      "type": "string",
      "defaultValue": "defaultkey",
      "metadata": {
        "description": "Host function key name used for all function apps."
      }
    },
    "hostFunctionKeyValue": {
      "type": "securestring",
      "metadata": {
        "description": "Host function key value used for all function apps."
      }
    }
  },
  "variables": {
    "location": "[parameters('location')]",
    "workspaceResourceId": "[format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.OperationalInsights/workspaces/{2}', parameters('subscriptionId'), parameters('resourceGroupName'), parameters('logAnalyticsWorkspaceName'))]",
    "flexRuntimes": [
      {
        "suffix": "powershell",
        "runtimeName": "powerShell",
        "runtimeVersion": "7.4"
      },
      {
        "suffix": "dotnet",
        "runtimeName": "dotnet-isolated",
        "runtimeVersion": "8.0"
      },
      {
        "suffix": "java",
        "runtimeName": "java",
        "runtimeVersion": "17"
      },
      {
        "suffix": "node",
        "runtimeName": "node",
        "runtimeVersion": "20"
      },
      {
        "suffix": "python",
        "runtimeName": "python",
        "runtimeVersion": "3.11"
      }
    ],
    "deploymentStorageContainerName": "[toLower(format('app-packages-{0}', take(parameters('storageAccountName'), 20)))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-05-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2",
      "properties": {
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}-plan-{1}-flex', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix)]",
      "location": "[variables('location')]",
      "sku": {
        "name": "FC1",
        "tier": "FlexConsumption"
      },
      "properties": {
        "reserved": true
      },
      "copy": {
        "name": "flexPlans",
        "count": "[length(variables('flexRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[format('{0}-{1}-ai', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix)]",
      "location": "[variables('location')]",
      "tags": {
        "[format('hidden-link:{0}', resourceId('Microsoft.Web/sites', toLower(format('{0}-{1}', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix))))]": "Resource"
      },
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[variables('workspaceResourceId')]"
      },
      "copy": {
        "name": "flexInsights",
        "count": "[length(variables('flexRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2024-04-01",
      "name": "[toLower(format('{0}-{1}', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix))]",
      "location": "[variables('location')]",
      "kind": "functionapp,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', format('{0}-{1}-ai', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix))]",
        "[resourceId('Microsoft.Web/serverfarms', format('{0}-plan-{1}-flex', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', parameters('storageAccountName'), 'default', variables('deploymentStorageContainerName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', format('{0}-plan-{1}-flex', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix))]",
        "httpsOnly": true,
        "functionAppConfig": {
          "runtime": {
            "name": "[variables('flexRuntimes')[copyIndex()].runtimeName]",
            "version": "[variables('flexRuntimes')[copyIndex()].runtimeVersion]"
          },
          "scaleAndConcurrency": {
            "instanceMemoryMB": 2048,
            "maximumInstanceCount": 40
          },
          "deployment": {
            "storage": {
              "type": "blobContainer",
              "value": "[format('{0}{1}', reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2023-05-01').primaryEndpoints.blob, variables('deploymentStorageContainerName'))]",
              "authentication": {
                "type": "StorageAccountConnectionString",
                "storageAccountConnectionStringName": "AzureWebJobsStorage"
              }
            }
          }
        },
        "siteConfig": {
          "cors": {
            "allowedOrigins": [
              "https://portal.azure.com"
            ]
          },
          "appSettings": [
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', format('{0}-{1}-ai', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix)), '2020-02-02').ConnectionString]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', parameters('storageAccountName'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2021-09-01').keys[0].value)]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            }
          ]
        }
      },
      "copy": {
        "name": "flexApps",
        "count": "[length(variables('flexRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Web/sites/host/functionKeys",
      "apiVersion": "2023-12-01",
      "name": "[format('{0}/default/{1}', toLower(format('{0}-{1}', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix)), parameters('hostFunctionKeyName'))]",
      "properties": {
        "name": "[parameters('hostFunctionKeyName')]",
        "value": "[parameters('hostFunctionKeyValue')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', toLower(format('{0}-{1}', parameters('namePrefix'), variables('flexRuntimes')[copyIndex()].suffix)))]"
      ],
      "copy": {
        "name": "flexKeys",
        "count": "[length(variables('flexRuntimes'))]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2023-05-01",
      "name": "[format('{0}/{1}', parameters('storageAccountName'), 'default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ],
      "properties": {
        "deleteRetentionPolicy": {}
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-05-01",
      "name": "[format('{0}/{1}/{2}', parameters('storageAccountName'), 'default', variables('deploymentStorageContainerName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageAccountName'), 'default')]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    }
  ],
  "outputs": {
    "functionAppNames": {
      "type": "array",
      "value": "[createArray(toLower(format('{0}-powershell', parameters('namePrefix'))), toLower(format('{0}-dotnet', parameters('namePrefix'))), toLower(format('{0}-java', parameters('namePrefix'))), toLower(format('{0}-node', parameters('namePrefix'))), toLower(format('{0}-python', parameters('namePrefix'))))]"
    },
    "appInsightsNames": {
      "type": "array",
      "value": "[createArray(format('{0}-powershell-ai', parameters('namePrefix')), format('{0}-dotnet-ai', parameters('namePrefix')), format('{0}-java-ai', parameters('namePrefix')), format('{0}-node-ai', parameters('namePrefix')), format('{0}-python-ai', parameters('namePrefix')))]"
    }
  }
}