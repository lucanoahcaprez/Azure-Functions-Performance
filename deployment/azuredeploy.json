{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "namePrefix": {
      "type": "string",
      "defaultValue": "azfperf",
      "metadata": {
        "description": "Prefix for Function App names; runtime suffixes are appended."
      }
    },
    "packageUriDotnet": {
      "type": "string",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/dotnet.zip",
      "metadata": {
        "description": "Zip package URI for the .NET function app (optional)."
      }
    },
    "packageUriNode": {
      "type": "string",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/node.zip",
      "metadata": {
        "description": "Zip package URI for the Node.js function app (optional)."
      }
    },
    "packageUriPython": {
      "type": "string",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/python.zip",
      "metadata": {
        "description": "Zip package URI for the Python function app (optional)."
      }
    },
    "packageUriPowerShell": {
      "type": "string",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/powershell.zip",
      "metadata": {
        "description": "Zip package URI for the PowerShell function app (optional)."
      }
    },
    "packageUriJava": {
      "type": "string",
      "defaultValue": "https://github.com/lucanoahcaprez/Azure-Functions-Performance/releases/latest/download/java.zip",
      "metadata": {
        "description": "Zip package URI for the Java function app (optional)."
      }
    }
  },
  "variables": {
    "storageName": "[substring(toLower(concat(parameters('namePrefix'), uniqueString(resourceGroup().id), '000000000000000000000000')), 0, 24)]",
    "runtimeConfigs": [
      {
        "suffix": "dotnet",
        "worker": "dotnet",
        "runtimeName": "dotnet-isolated",
        "runtimeVersion": "8.0",
        "deployContainerName": "[take(concat(toLower(parameters('namePrefix')), '-dotnet-deploy'), 63)]",
        "packageUri": "[parameters('packageUriDotnet')]"
      },
      {
        "suffix": "node",
        "worker": "node",
        "runtimeName": "node",
        "runtimeVersion": "20",
        "deployContainerName": "[take(concat(toLower(parameters('namePrefix')), '-node-deploy'), 63)]",
        "packageUri": "[parameters('packageUriNode')]"
      },
      {
        "suffix": "python",
        "worker": "python",
        "runtimeName": "python",
        "runtimeVersion": "3.11",
        "deployContainerName": "[take(concat(toLower(parameters('namePrefix')), '-python-deploy'), 63)]",
        "packageUri": "[parameters('packageUriPython')]"
      },
      {
        "suffix": "powershell",
        "worker": "powershell",
        "runtimeName": "powershell",
        "runtimeVersion": "7.4",
        "deployContainerName": "[take(concat(toLower(parameters('namePrefix')), '-powershell-deploy'), 63)]",
        "packageUri": "[parameters('packageUriPowerShell')]"
      },
      {
        "suffix": "java",
        "worker": "java",
        "runtimeName": "java",
        "runtimeVersion": "17",
        "deployContainerName": "[take(concat(toLower(parameters('namePrefix')), '-java-deploy'), 63)]",
        "packageUri": "[parameters('packageUriJava')]"
      }
    ],
    "storageConnectionString": ""
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageName')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-12-01",
      "name": "[concat(parameters('namePrefix'), '-plan')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "FC1",
        "tier": "FlexConsumption"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/default/{1}', variables('storageName'), variables('runtimeConfigs')[copyIndex()].deployContainerName)]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
      ],
      "properties": {
        "publicAccess": "None"
      },
      "copy": {
        "name": "deployContainers",
        "count": "[length(variables('runtimeConfigs'))]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-12-01",
      "name": "[toLower(concat(parameters('namePrefix'), '-', variables('runtimeConfigs')[copyIndex()].suffix))]",
      "location": "[parameters('location')]",
      "kind": "functionapp,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.Web/serverfarms', concat(parameters('namePrefix'), '-plan'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', variables('storageName'), 'default', variables('runtimeConfigs')[copyIndex()].deployContainerName)]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('namePrefix'), '-plan'))]",
        "httpsOnly": true,
        "functionAppConfig": {
          "runtime": {
            "name": "[variables('runtimeConfigs')[copyIndex()].runtimeName]",
            "version": "[variables('runtimeConfigs')[copyIndex()].runtimeVersion]"
          },
          "scaleAndConcurrency": {
            "instanceMemoryMB": 2048,
            "maximumInstanceCount": 40
          },
          "deployment": {
            "storage": {
              "type": "blobContainer",
              "value": "[concat('https://', variables('storageName'), '.blob.', environment().suffixes.storage, '/', variables('runtimeConfigs')[copyIndex()].deployContainerName)]",
              "authentication": {
                "type": "StorageAccountConnectionString",
                "storageAccountConnectionStringName": "AzureWebJobsStorage"
              }
            }
          }
        },
        "siteConfig": {
          "appSettings": "[concat(createArray(createObject('name', 'AzureWebJobsStorage', 'value', concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2023-01-01').keys[0].value, ';EndpointSuffix=', environment().suffixes.storage)), createObject('name', 'FUNCTIONS_EXTENSION_VERSION', 'value', '~4')), if(not(empty(variables('runtimeConfigs')[copyIndex()].packageUri)), createArray(createObject('name', 'WEBSITE_RUN_FROM_PACKAGE', 'value', variables('runtimeConfigs')[copyIndex()].packageUri)), createArray()))]"
        }
      },
      "copy": {
        "name": "functionApps",
        "count": "[length(variables('runtimeConfigs'))]"
      }
    }
  ],
  "outputs": {
    "functionAppNames": {
      "type": "array",
      "value": "[createArray(toLower(concat(parameters('namePrefix'), 'dotnet')), toLower(concat(parameters('namePrefix'), 'node')), toLower(concat(parameters('namePrefix'), 'python')), toLower(concat(parameters('namePrefix'), 'powershell')), toLower(concat(parameters('namePrefix'), 'java')))]"
    }
  }
}
